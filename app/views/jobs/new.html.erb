<h1>Post a New Job</h1>

<%= form_for (@job) do |f| %>
  
  <p>
    <%= f.label :job_description %><br />
    <%= f.text_field :job_desc %>
  </p>
  
  <p>
    <%= f.label :duration %><br />
    <%= f.text_area :duration %>
  </p>
  
  <p>
    <%= f.label :pay %><br />
    <%= f.text_area :pay %>
  </p>
  
  <p>
    <%= f.submit %>
  </p>
<% end %>